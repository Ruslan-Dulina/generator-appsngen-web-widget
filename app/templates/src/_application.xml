<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs id="<%= _.slugify(widgetName) %>"
                 title="<%= widgetName %>"
                 description="Your cool widget description" >
    </ModulePrefs>

    <Metadata>
        <Information>
            <![CDATA[
			Your cool widet info
		]]>
        </Information>
        <Categories>Examples</Categories>
        <SupportedDimensions>LARGE | MEDIUM | SMALL</SupportedDimensions>
    </Metadata>

    <UserPref name="greeting"
              display_name="Preferred greeting"
              datatype="text"
              default_value="Hello, World!" />

    <Content type="html" href="widget.html">
    </Content>
</Module>
